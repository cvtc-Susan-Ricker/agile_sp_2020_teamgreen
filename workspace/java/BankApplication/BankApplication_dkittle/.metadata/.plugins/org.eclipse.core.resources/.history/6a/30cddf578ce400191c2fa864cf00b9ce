package edu.cvtc.edu;

/**
 * @author david.kittle
 *
 */
public class BankAccountDemo {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		
		BankAccount[] accounts = new BankAccount[4];
		
		accounts[0] = new BankAccount(1.0);
		accounts[0].setBalance(95.0);
				
		accounts[1]= new BusinessCheckingAccount(1001.0);
		accounts[2] = new FreeCheckingAccount(101.0);
		accounts[3] = new SavingsAccount(6.0);
		
		for (int index =0; index < accounts.length; index++) {
			System.out.print(" Accounts " + (index + 1) + ":" + "Balance: " + accounts[index].getBalance());
		}

		
		

	}
	
	

}
